<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    tools:context=".PaginaAnimales">

    <FrameLayout
        android:layout_width="155dp"
        android:layout_height="221dp"
        android:animateLayoutChanges="true"

        android:background="@drawable/your_rounded_shape"
        android:backgroundTint="#FFFFFF"
        app:cornerRadius="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@id/imageView5"
            android:layout_width="84dp"
            android:layout_height="105dp"

            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/perro"
            app:shapeAppearanceOverlay="@style/roundImage"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="387dp"
        android:layout_height="222dp"
        android:animateLayoutChanges="true"

        android:background="@drawable/your_rounded_shape"
        android:backgroundTint="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347">

        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400px"
            android:text="Edad"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@id/imageView5"
            android:layout_width="148dp"
            android:layout_height="128dp"
            android:layout_gravity="left"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/perro"
            app:shapeAppearanceOverlay="@style/roundImage"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="207dp"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:text="Sexo"
            android:textAlignment="center"
            android:textSize="12sp" />

    </FrameLayout>

    <Button
        android:id="@+id/button6"

        android:layout_width="111dp"
        android:layout_height="46dp"
        android:backgroundTint="#73F08E"
        android:text="Perros"
        android:textColor="#000000"
        app:cornerRadius="30px"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/button5"
        android:backgroundTint="#00757575"

        android:textColor="#73F08E"
        app:cornerRadius="50px"
        app:iconTint="#B1B1B1"
        android:layout_width="111dp"
        android:layout_height="46dp"
        app:strokeColor="#73F08E"
        app:strokeWidth="7px"
        android:text="Gatos"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="124dp"
        android:layout_height="113dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mypet" />


</androidx.constraintlayout.widget.ConstraintLayout>